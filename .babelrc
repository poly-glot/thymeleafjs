{
	"plugins": [
		"@babel/plugin-proposal-class-properties",
		"@babel/plugin-proposal-object-rest-spread",
		"@babel/plugin-proposal-optional-chaining"
	],
	"env": {
		"build": {
			"plugins": [
				["@babel/plugin-transform-runtime", {
					"helpers": false
				}]
			],
			"presets": [
				["@babel/preset-env", {
					"modules": false,
					"targets": {
						"browsers": [
							"last 5 chrome versions",
							"last 5 firefox versions"
						],
						"node": "10.0.0"
					}
				}]
			]
		},
		"test": {
			"presets": [
				["@babel/preset-env", {
					"targets": {
						"node": "10.0.0"
					}
				}]
			]
		}
	}
}
